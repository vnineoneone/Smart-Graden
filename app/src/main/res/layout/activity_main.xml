<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.lequangviet.myapplication.MainActivity">

    <TextView
        android:id="@+id/txtTemperature"
        android:background="#ff0000"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="25%"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="10%"

        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"

        android:text="30Â°C" />

    <TextView
        android:id="@+id/txtHumidity"
        android:background="#00ff00"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="25%"
        app:layout_marginStartPercent="55%"
        app:layout_marginTopPercent="10%"

        android:textSize="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"

        android:text="75%" />

    <ToggleButton
        android:id="@+id/btnLED"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="25%"
        app:layout_marginStartPercent="20%"
        app:layout_marginTopPercent="45%"
        android:background="@drawable/toggle_selector"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:src="@drawable/logo"
        android:scaleType="fitXY"

        app:layout_widthPercent="10%"
        app:layout_heightPercent="10%"
        app:layout_marginStartPercent="0%"
        app:layout_marginTopPercent="90%"
        />

    <ImageView
        android:src="@drawable/icon_info"
        android:scaleType="fitXY"

        app:layout_widthPercent="15%"
        app:layout_heightPercent="7.5%"
        app:layout_marginStartPercent="20%"
        app:layout_marginTopPercent="10%"
        android:id="@+id/imageView" />

    <ImageView
        android:src="@drawable/icon_love"
        android:scaleType="fitXY"

        app:layout_widthPercent="15%"
        app:layout_heightPercent="7.5%"
        app:layout_marginStartPercent="65%"
        app:layout_marginTopPercent="10%"
        android:id="@+id/imageView2" />

    <TextView
        android:text="IOT Dashboard Demo"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#0000ff"

        app:layout_widthPercent="100%"
        app:layout_heightPercent="7.5%"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="92%"
        android:id="@+id/textView" />
    <!--<Button-->
        <!--android:id="@+id/btnClickme"-->
        <!--android:layout_alignEnd="@+id/txtHumidity"-->
        <!--android:layout_below="@+id/btnLED"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="Click me"-->
    <!--/>-->
    <Button
        android:id="@+id/btnClickme"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp"
        android:layout_marginStart="18dp"
        android:background="#00ff00"
        android:text="Click me"
        app:layout_heightPercent="20%"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="45%"
        app:layout_widthPercent="20%" />

</android.support.percent.PercentRelativeLayout>
